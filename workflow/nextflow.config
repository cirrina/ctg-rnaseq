

// DEFAULT CONIG FOR CTG RNA SEQ Pipeline

params {

// --------------------------------------------------------------------------------------
// Project specific parameters - should be defined in 'nextflow.params.<id>.config'
// --------------------------------------------------------------------------------------
  // Set blank params for parameters included in the project-specific config 'nextflow.params_${id}.config'
  // Project-specific config file genereated by primer script.
  // NOTE: Make sure to update this section when the project nf config file is updated.
  // THESE WILL BE OVERWRITTEN by the config 'nextflow.params.${id}.config"'

  // root directories
  project_root        =  ''
  delivery_root       =  ''
  qc_root             =  ''
  log_root            =  ''

  //  project  and run folders
  projectid           =  ''
  n_samples           =  ''
  projectdir          =  ''
  //execdir           =  ''
  bindir              =  ''

  //  samplesheets
  samplesheet         =  ''
  samplesheet_demux   =  ''

  //  assay specific
  assay               =  ''
  instrument_type     =  ''
  index_adapters      =  ''
  paired              =  true
  strandness          =  ''

  //  demux specific
  runfolderdir        =  ''
  runfolder           =  ''
  fastqdir            =  ''
  pooled              =  false

  //  module specific
  run_demux             =  true
  run_fastqc            =  true
  run_multiqc           =  true
  run_multiqc_ctg       =  true
  run_fastq_screen      =  true
  bam_indexing          =  true
  piccard_markdups      =  true
  picard_rnaseqmetrics  =  true

  //  log files
  logdir               =  ''
// --------------------------------------------------------------------------------------





// --------------------------------------------------------------------------------------
// Parameters NOT set in 'nextflow.params.<id>.config'
// --------------------------------------------------------------------------------------
  // Container. Note STAR version must match STAR built reference
  // container           =  '/projects/fs1/shared/containers_singularity/bulkRNA/rnaseqtools.dl.0.1.sif'

// container  = 'singularity/rnaSeqTools/rnaseqtools.dl.0.1.sif'

  // Process speicfic parameters
  // ---------------------------
  fcounts_feature                    =  'exon'

  // 'Mus musculus'
  gtf_mm               =  "/projects/fs1/shares/genomicData/mm10/annotation/gtf/gencode/gencode.vM25.annotation.gtf"
  star_genome_mm       =  "/projects/fs1/shared/genomicData/mm10/STAR/star_ref_index/"

  // 'Homo sapiens'
  gtf_hs              =  "/projects/fs1/shared/genomicData/hg38/annotation/gtf/gencode/v33/gencode.v33.annotation.gtf"
  star_genome_hs      =  "/projects/fs1/shared/genomicData/hg38/STAR/star_2.7.6a/"



